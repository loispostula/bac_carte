container_commands:
  00_create_dir:
    command: mkdir -p /var/log/app-logs
  01_change_permissions:
    command: chmod g+s /var/log/app-logs
  02_change_owner:
    command: chown wsgi:wsgi /var/log/app-logs  
  03_migrate:
    command: "source /opt/python/run/venv/bin/activate && python bac_carte/manage.py migrate --noinput"
    leader_only: true
  04_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python bac_carte/manage.py collectstatic --noinput"
option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "bac_carte.settings"
    "PYTHONPATH": "/opt/python/current/app/bac_carte:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: bac_carte/bac_carte/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"
